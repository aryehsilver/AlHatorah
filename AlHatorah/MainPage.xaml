<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlHatorah.MainPage">
  <Grid>
    <WebView x:Name="webView" Navigating="OnNavigating" Navigated="OnNavigated" />

    <Button x:Name="FloatingButton"
            WidthRequest="45"
            HeightRequest="45"
            CornerRadius="45"
            BackgroundColor="#3C3C3C"
            TextColor="#fff"
            FontSize="16"
            Text="⋯"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="10,5"
            Clicked="OnFloatingButtonClicked">
      <Button.Shadow>
        <Shadow Brush="Black" 
                Offset="2,2" 
                Radius="4" 
                Opacity="0.3" />
      </Button.Shadow>
    </Button>

    <Border x:Name="PopupMenu"
          BackgroundColor="#3C3C3C"
          StrokeThickness="1"
          Stroke="#757575"
          Padding="0"
          IsVisible="False"
          HorizontalOptions="End"
          VerticalOptions="End"
          Margin="20,0,10,55"
          WidthRequest="50"
          HeightRequest="138">
      <Border.StrokeShape>
        <RoundRectangle CornerRadius="25" />
      </Border.StrokeShape>
      <Border.Shadow>
        <Shadow Brush="Black" 
              Offset="2,2" 
              Radius="8" 
              Opacity="0.3" />
      </Border.Shadow>

      <Grid RowDefinitions="*,*,*">
        <Button Text="&#xf060;"
                x:Name="BackButton"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="FontAwesome"
                FontSize="18"
                Clicked="OnBackClicked"
                CornerRadius="60"
                WidthRequest="60"
                HeightRequest="45"
                Grid.Row="0" />
        <Button Text="&#xf061;"
                x:Name="ForwardButton"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="FontAwesome"
                FontSize="18"
                Clicked="OnForwardClicked"
                CornerRadius="60"
                WidthRequest="60"
                HeightRequest="45"
                Grid.Row="1" />
        <Button Text="&#xf021;"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="FontAwesome"
                FontSize="18"
                Clicked="OnRefreshClicked"
                CornerRadius="60"
                WidthRequest="60"
                HeightRequest="45"
                Grid.Row="2" />
      </Grid>
    </Border>
  </Grid>
</ContentPage>
